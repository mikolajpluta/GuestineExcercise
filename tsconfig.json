{
  "compilerOptions": {
    "target": "es6",                                
    "module": "commonjs",                           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,       
    "strict": true,
    "outDir": "./dist",  
    "rootDir": "./src",
    "types": ["node"],                                
  },
  "include": ["src/**/*"],            
  "exclude": ["node_modules"] 
}
